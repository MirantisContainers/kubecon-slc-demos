apiVersion: autopilot.k0sproject.io/v1beta2
kind: Plan
metadata:
  name: autopilot

spec:
  id: id1234
  timestamp: now

  commands:
    - airgapupdate:
        version: v1.29.1+k0s.1
        platforms:
          linux-arm64:
            url: http://${FILE_SERVER_IP}/files/images/k0s-airgap-bundle-v1.29.1+k0s.1-amd64
        workers:
          discovery:
            selector: {}
    - k0supdate:
        version: v1.29.1+k0s.1
        platforms:
          linux-arm64:
            url: http://${FILE_SERVER_IP}/files/bins/k0s-v1.29.1+k0s.1-arm64
        targets:
          controllers:
            discovery:
              static:
                nodes:
                  - k0sctl-controller
          workers:
            limits:
              concurrent: 1
            discovery:
              selector: {}
                